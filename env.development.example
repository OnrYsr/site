# Muse3DStudio Local Development Environment

# Database Configuration (Docker Compose)
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/muse3dstudio"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-change-in-production"

# Application Environment
NODE_ENV="development"
PORT=3000

# Redis Configuration (Docker Compose)
REDIS_URL="redis://localhost:6379"

# Email Configuration (Optional - for future features)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@muse3dstudio.com"

# File Upload Configuration
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10MB"

# API Keys (Optional - for future integrations)
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Security Settings
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL="debug"

# Development Tools
PRISMA_STUDIO_PORT=5555

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=""

# Monitoring (Optional)
SENTRY_DSN="" 

# Production Sync Configuration
PRODUCTION_DATABASE_URL="postgresql://username:password@production-server:5432/muse3dstudio"
DATABASE_URL_PROD="postgresql://username:password@production-server:5432/muse3dstudio"

# Auto-sync settings
ENABLE_AUTO_SYNC=false
SYNC_INTERVAL_HOURS=6 